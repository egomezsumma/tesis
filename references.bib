journal = {NeuroImage},
keywords = {Diffusion MRI,Gray matter microstructure,Microstructure imaging,Neurite density,Orientation dispersion,White matter microstructure},
number = {4},
pages = {1000--1016},
pmid = {22484410},
publisher = {Elsevier Inc.},
title = {{NODDI: Practical in vivo neurite orientation dispersion and density imaging of the human brain}},
url = {http://dx.doi.org/10.1016/j.neuroimage.2012.03.072},
