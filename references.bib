journal = {NeuroImage},
keywords = {Compressed sensing,Diffusion MRI,Spherical ridgelets,Super resolution reconstruction},
pages = {386--400},
pmid = {26505296},
publisher = {Elsevier Inc.},
title = {{A joint compressed-sensing and super-resolution approach for very high-resolution diffusion imaging}},
