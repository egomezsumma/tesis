journal = {Medical Image Analysis},
keywords = {Diffusion spectrum imaging,Ensemble average propagator,High angular resolution diffusion imaging,Laplace's equation,Q-Space},
number = {4},
pages = {603--621},
pmid = {20685153},
publisher = {Elsevier B.V.},
title = {{Multiple q-shell diffusion propagator imaging}},
